{
  "name": "parity-ci",
  "version": "1.0.3",
  "description": "A robust CLI tool to ensure environment consistency and health across your software projects.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pawandasila/parity.git"
  },
  "homepage": "https://github.com/PawanDasila/parity#readme",
  "bugs": {
    "url": "https://github.com/PawanDasila/parity/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "parity": "bin/parity.js"
  },
  "files": [
    "dist",
    "bin",
    "docs",
    "templates",
    "schemas",
    "assests",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --dts",
    "dev": "tsup src/index.ts --watch --onSuccess \"node dist/index.js\"",
    "start": "node dist/index.js",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "environment",
    "check",
    "consistency",
    "dev-tool",
    "parity"
  ],
  "author": "Pawandasila",
  "license": "MIT",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.2",
    "@types/semver": "^7.7.1",
    "parity-ci": "^1.0.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/prompts": "^2.4.9",
    "cac": "^6.7.14",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "execa": "^9.6.1",
    "prompts": "^2.4.2",
    "semver": "^7.7.3",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  }
}
